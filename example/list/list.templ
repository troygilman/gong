package main

import (
	"github.com/troygilman0/gong"
	"net/http"
)

type listView struct {
	ItemView itemView `kind:"user"`
	db       *userDatabase
}

templ (view listView) Action() {
	switch gong.Method(ctx) {
		case http.MethodGet:
			{{
			users := view.db.ReadAll()
			}}
			for _, user := range users {
				@gong.Component("user", view.ItemView, gong.WithLoaderData(user))
			}
		case http.MethodPost:
			{{
			name := gong.Param(ctx, "name")
			user := userData{
				name: name,
			}
			if err := view.db.Create(user); err != nil {
				return nil
			}
			}}
			@gong.Component("user", view.ItemView, gong.WithLoaderData(user))
	}
}

templ (view listView) View() {
	<div>
		@gong.Form(gong.WithSwap(gong.SwapBeforeEnd)) {
			<input name="name" type="text"/>
			<button type="submit">Add</button>
		}
		@gong.Target(gong.WithTrigger(gong.TriggerLoad))
	</div>
}
