package main

import (
	"github.com/troygilman/gong"
	"github.com/troygilman/gong/hooks"
	"log"
)

type testView struct {
	UserComponent gong.Component
	db            *userDatabase
}

templ (view testView) Action() {
	{{
	log.Println("TEST", hooks.Request(ctx).PathValue("name"))
	}}
}

templ (view testView) View() {
	{{
	name := hooks.Request(ctx).PathValue("name")
	user, ok := view.db.Read(name)
	}}
	if ok {
		@view.UserComponent.WithLoaderData(user)
	}
}
