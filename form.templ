package gong

templ Form(opts ...ComponentOption) {
	{{
	config := componentConfig{
		swap: "outerHTML",
	}
	for _, opt := range opts {
		config = opt(config)
	}
	}}
	<form
		hx-post={ getContext(ctx).path }
		hx-target={ "#" + buildComponentID(ctx) }
		hx-swap={ config.swap }
	>
		{ children... }
	</form>
}
